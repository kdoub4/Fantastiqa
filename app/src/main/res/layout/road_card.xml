<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:layout_marginBottom="@dimen/md_keylines"
    android:clickable="true"
    android:enabled="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:contentPadding="2dp"
    app:rippleColor="@color/colorAccent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardConstraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="90dp"
            android:layout_height="@dimen/board_card_height"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/water" />

        <TextView
            android:id="@+id/cardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage"
            app:layout_constraintEnd_toEndOf="@+id/cardImage"
            app:layout_constraintStart_toStartOf="@+id/cardImage"
            app:layout_constraintTop_toTopOf="@+id/cardImage" />

        <ImageView
            android:id="@+id/power1"
            style="@style/symbolLayout"
            app:layout_constraintStart_toStartOf="@id/cardImage"
            app:layout_constraintTop_toTopOf="@id/cardImage"
            app:srcCompat="@drawable/broom" />

        <ImageView
            android:id="@+id/power2"
            style="@style/symbolLayout"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/power1"
            app:layout_constraintTop_toTopOf="@+id/cardImage"
            app:srcCompat="@drawable/broom" />

        <ImageView
            android:id="@+id/ability"
            style="@style/symbolLayout"
            app:layout_constraintEnd_toEndOf="@id/cardImage"
            app:layout_constraintTop_toTopOf="@id/cardImage"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/subdueBy"
            style="@style/symbolLayout"
            app:layout_constraintBottom_toBottomOf="@id/cardImage"
            app:layout_constraintEnd_toEndOf="@id/cardImage"
            app:srcCompat="@drawable/water" />

        <ImageView
            android:id="@+id/gem"
            style="@style/symbolLayout"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/cardImage"
            app:layout_constraintStart_toStartOf="@id/cardImage"
            app:srcCompat="@drawable/diamond" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>