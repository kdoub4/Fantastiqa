<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
    <androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="?attr/colorPrimary"
		android:elevation="4dp"
		android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
		app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>
          <androidx.recyclerview.widget.RecyclerView
              app:layout_constraintBottom_toBottomOf="parent"
			  app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
            
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:orientation="horizontal"
              android:id="@+id/rvHand"/>

        <include
            android:id="@+id/landc6"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/roadc1"
            app:layout_constraintTop_toBottomOf="@id/boardTable"
            app:layout_constraintHorizontal_chainStyle="spread"
            
		/>

        <include
            android:id="@+id/roadc1"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/boardTable"
            app:layout_constraintStart_toEndOf="@id/landc6"
            app:layout_constraintEnd_toStartOf="@id/landc1"
            />

        <include
            android:id="@+id/landc1"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/boardTable"
            app:layout_constraintStart_toEndOf="@id/roadc1"
            app:layout_constraintEnd_toEndOf="parent"
            />
    
        <include
            android:id="@+id/roadc6"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/questc1"
			app:layout_constraintTop_toBottomOf="@id/landc6"
            app:layout_constraintHorizontal_chainStyle="spread"
            
		/>

        <include
            android:id="@+id/questc1"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/landc6"
			app:layout_constraintStart_toEndOf="@id/roadc6"
            app:layout_constraintEnd_toStartOf="@id/roadc2"
            />

        <include
            android:id="@+id/roadc2"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/landc6"
            app:layout_constraintStart_toEndOf="@id/questc1"
            app:layout_constraintEnd_toEndOf="parent"
            />
            
            
        <include
            android:id="@+id/landc5"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/roadc7"
			app:layout_constraintTop_toBottomOf="@id/roadc6"
            app:layout_constraintHorizontal_chainStyle="spread"
            
		/>

        <include
            android:id="@+id/roadc7"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/roadc6"
			app:layout_constraintStart_toEndOf="@id/landc5"
            app:layout_constraintEnd_toStartOf="@id/landc2"
            />

        <include
            android:id="@+id/landc2"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/roadc6"
            app:layout_constraintStart_toEndOf="@id/roadc7"
            app:layout_constraintEnd_toEndOf="parent"
            />
            
            
        <include
            android:id="@+id/roadc5"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/questc2"
			app:layout_constraintTop_toBottomOf="@id/landc5"
            app:layout_constraintHorizontal_chainStyle="spread"
            
		/>

        <include
            android:id="@+id/questc2"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/landc5"
			app:layout_constraintStart_toEndOf="@id/roadc5"
            app:layout_constraintEnd_toStartOf="@id/roadc3"
            />

        <include
            android:id="@+id/roadc3"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/landc5"
            app:layout_constraintStart_toEndOf="@id/questc2"
            app:layout_constraintEnd_toEndOf="parent"
            />
            
            
        <include
            android:id="@+id/landc4"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/roadc4"
			app:layout_constraintTop_toBottomOf="@id/roadc5"
            app:layout_constraintHorizontal_chainStyle="spread"
            
		/>

        <include
            android:id="@+id/roadc4"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/roadc5"
			app:layout_constraintStart_toEndOf="@id/landc4"
            app:layout_constraintEnd_toStartOf="@id/landc3"
            />

        <include
            android:id="@+id/landc3"
            layout="@layout/fcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/roadc5"
            app:layout_constraintStart_toEndOf="@id/roadc4"
            app:layout_constraintEnd_toEndOf="parent"
            />

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:orientation="vertical"
    android:stretchColumns="0,1,2"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/boardTable"
	>
    
      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
              android:visibility="gone"
           >

      </TableRow>

      <TableRow style="@style/rowLayout">
      <TextView
          android:id="@+id/status"
          style="@style/textLayout"
          android:layout_column="1"
          android:layout_weight="0.35"
          />
      </TableRow>

    <TableRow style="@style/rowLayout"    
    android:visibility="gone"
>
        <TextView
            android:id="@+id/land6"
            style="@style/textLayout"
            android:layout_column="0"
            android:layout_weight="0.35"
            android:tag="6"
            />

        <TextView
            android:id="@+id/road1"
			style="@style/textLayout"
            android:layout_column="1"
            android:layout_weight="0.3"
		/>

        <TextView
            android:id="@+id/land1"
            style="@style/textLayout"
            android:layout_column="2"
            android:layout_weight="0.35"
            android:tag="1"
            />
    </TableRow>

    <TableRow style="@style/rowLayout"
        android:visibility="gone"
>
        <TextView
            android:id="@+id/road6"
