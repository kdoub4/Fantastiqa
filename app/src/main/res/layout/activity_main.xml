            style="@style/textLayout"
            android:layout_column="1"
            android:layout_weight="0.3"
            />

        <TextView
            android:id="@+id/road2"
            style="@style/textLayout"
            android:layout_column="2"
            android:layout_weight="0.35"
            />
    </TableRow>

    <TableRow style="@style/rowLayout"
        android:visibility="gone"
>
        <TextView
            android:id="@+id/land5"
            style="@style/textLayout"
            android:layout_column="0"
            android:layout_weight="0.35"
            android:tag="5"
            />

        <TextView
            android:id="@+id/road7"
            style="@style/textLayout"
            android:layout_column="1"
            android:layout_weight="0.3"
            />

        <TextView
            android:id="@+id/land2"
            style="@style/textLayout"
            android:layout_column="2"
            android:layout_weight="0.35"
            android:tag="2"
            />
    </TableRow>

    <TableRow style="@style/rowLayout"
        android:visibility="gone"
>
        <TextView
            android:id="@+id/road5"
            style="@style/textLayout"
            android:layout_column="0"
            android:layout_weight="0.35"
            />

        <TextView
            android:id="@+id/publicQuest2"
            style="@style/textLayout"
            android:layout_column="1"
            android:layout_weight="0.3"
            />

        <TextView
            android:id="@+id/road3"
            style="@style/textLayout"
            android:layout_column="2"
            android:layout_weight="0.35"
            />
    </TableRow>

    <TableRow style="@style/rowLayout"
        android:visibility="gone"
>
        <TextView
            android:id="@+id/land4"
            style="@style/textLayout"
            android:layout_column="0"
            android:layout_weight="0.35"
            android:tag="4"
            />

        <TextView
            android:id="@+id/road4"
            style="@style/textLayout"
            android:layout_column="1"
            android:layout_weight="0.3"
            />

        <TextView
            android:id="@+id/land3"
            style="@style/textLayout"
            android:layout_column="2"
            android:layout_weight="0.35"
            android:tag="3"
            />
    </TableRow>
    <TableRow
		android:weightSum="6">
        <Button
            android:id="@+id/buttonMove"
            style="@style/buttonLayout"
            android:layout_column="0"
            android:text="Move"
            android:textSize="8sp"
            android:layout_weight="1"/>
            
        <Button
            android:id="@+id/buttonTower"
            style="@style/buttonLayout"
            android:layout_column="1"
            android:text="Tower Visit"
            android:textSize="8sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttonFlyingCarpet"
            style="@style/buttonLayout"
            android:layout_column="2"
            android:text="Flying Carpet"
            android:textSize="8sp"
            android:layout_weight="1"/>
            
        <Button
            android:id="@+id/buttonStoreCards"
            style="@style/buttonLayout"
            android:layout_column="3"
            android:text="Store Cards"
            android:textSize="8sp"
            android:layout_weight="1" />
        
        <Button
            android:id="@+id/buttonStoreQuestCards"
            style="@style/buttonLayout"
            android:layout_column="4"
            android:text="Quest Cards" 
            android:textSize="8sp"
            android:layout_weight="1"
            />
            
        <Button
            android:id="@+id/buttonDone"
            style="@style/buttonLayout"
            android:layout_column="5"
            android:text="Done" 
            android:textSize="8sp"
            android:layout_weight="1"/>
    </TableRow>
      <TableRow style="@style/rowLayout">
      <TextView
          android:id="@+id/gems"
          style="@style/textLayout"
          android:layout_column="0"
          android:layout_weight="0.35"
          />
          <TextView
              android:id="@+id/vps"
              style="@style/textLayout"
              android:layout_column="1"
              android:layout_weight="0.35"
              />
          <TextView
              android:id="@+id/deck"
              style="@style/textLayout"
              android:layout_column="2"
              android:layout_weight="0.35"
              />
          <TextView
              android:id="@+id/discard"
              style="@style/textLayout"
              android:layout_column="3"
              android:layout_weight="0.35"
              />
      </TableRow>
      <TableRow android:layout_margin="10dp">
        <TextView
            android:id="@+id/hand1"
            style="@style/textLayout"
            android:layout_column="0"
            android:layout_weight="0.4"
            />

        <TextView
            android:id="@+id/hand2"
            style="@style/textLayout"
            android:layout_column="1"
            android:layout_weight="0.4"
            />
            
        <TextView
            android:id="@+id/hand3"
            style="@style/textLayout"
            android:layout_column="2"
            android:layout_weight="0.4"
            />

        <TextView
            android:id="@+id/hand4"
            style="@style/textLayout"
            android:layout_column="3"
            android:layout_weight="0.4"
            />

        <TextView
            android:id="@+id/hand5"
            style="@style/textLayout"
            android:layout_column="4"
            android:layout_weight="0.4"
            />
    </TableRow>
    
    <TableRow android:layout_margin="5dp">
        <TextView
            android:id="@+id/hand6"
            style="@style/textLayout"
            android:layout_column="0"
            android:layout_weight="0.4"
			/>

        <TextView
            android:id="@+id/hand7"
            style="@style/textLayout"
            android:layout_column="1"
            android:layout_weight="0.4"
            />
            
        <TextView
            android:id="@+id/hand8"
