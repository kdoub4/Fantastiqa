            />
        <TextView
            android:id="@+id/quest03"
            style="@style/textLayout"
            android:layout_column="4"
            android:layout_weight="0.4"
            />
        <TextView
            android:id="@+id/quest04"
            style="@style/textLayout"
            android:layout_column="5"
            android:layout_weight="0.4"
            />
    </TableRow>
    <TableRow android:layout_margin="2dp">
        <TextView
            android:id="@+id/quest1"
            style="@style/textLayout"
            android:layout_column="0"
            android:layout_weight="0.4"
            android:text="EmptyQuest:" />

        <TextView
            android:id="@+id/quest10"
            style="@style/textLayout"
            android:layout_column="1"
            android:layout_weight="0.4"
            />
        <TextView
            android:id="@+id/quest11"
            style="@style/textLayout"
