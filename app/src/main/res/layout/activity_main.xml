            android:layout_column="2"
            android:layout_weight="0.4"
             />

        <TextView
            android:id="@+id/hand9"
            style="@style/textLayout"
            android:layout_column="3"
            android:layout_weight="0.4"
            />

        <TextView
            android:id="@+id/hand10"
            style="@style/textLayout"
            android:layout_column="4"
            android:layout_weight="0.4"
            />
    </TableRow>
        <TableRow android:layout_margin="5dp">
        <TextView
            android:id="@+id/storageCards"
            style="@style/textLayout"
            android:layout_column="0"
            android:layout_weight="0.4"
            android:text="Stored:" />

        <TextView
            android:id="@+id/stored0"
            style="@style/textLayout"
            android:layout_column="1"
            android:layout_weight="0.4"
            />
        <TextView
            android:id="@+id/stored1"
            style="@style/textLayout"
            android:layout_column="2"
            android:layout_weight="0.4"
            />
        <TextView
            android:id="@+id/stored2"
