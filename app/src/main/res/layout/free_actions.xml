<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/futurist"
        android:tooltipText="Flying Carpet"
        android:padding="8dp"
        android:onClick="onFlyingCarpetClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/add_library"
        android:tooltipText="Store Personal"
        android:padding="8dp"
        android:onClick="onStorePersonalClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/remove"
        android:tooltipText="Store Quest"
        android:padding="8dp"
        android:onClick="onStoreQuestClick"/>
        
        

</LinearLayout>
