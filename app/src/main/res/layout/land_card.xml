<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

        
		<ImageView
            android:id="@+id/landImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/water" 
            android:scaleType="fitXY"
            android:layout_margin="6dp"/>

        <ImageView
            android:id="@+id/tower"
            style="@style/symbolLayout"
            card_view:layout_constraintEnd_toEndOf="@id/landImage"
            card_view:layout_constraintTop_toTopOf="@id/landImage"
            card_view:srcCompat="@mipmap/ic_launcher" />

        <TextView
			android:id="@+id/player1"
			style="@style/textLayout"
			android:text="P1"
			android:visibility="gone"
			android:textColor="#000000"
			card_view:layout_constraintBottom_toBottomOf="parent"
			card_view:layout_constraintStart_toStartOf="parent"
			android:layout_margin="10dp"
		/>
		<TextView
			android:id="@+id/player2"
			style="@style/textLayout"
			android:text="P2"
			android:visibility="gone"
			android:textColor="#000000"
			card_view:layout_constraintBottom_toBottomOf="parent"
			card_view:layout_constraintStart_toEndOf="@id/player1"
			android:layout_margin="10dp"
		/>
		<TextView
			android:id="@+id/player3"
			style="@style/textLayout"
			android:text="P3"
			android:visibility="gone"
			android:textColor="#000000"
			card_view:layout_constraintBottom_toBottomOf="parent"
			card_view:layout_constraintStart_toEndOf="@id/player1"
			android:layout_margin="10dp"
		/>
    </androidx.constraintlayout.widget.ConstraintLayout>
