<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/textLayout</item>
    </style>
    
    <style name="whiteText" parent="TextAppearance.AppCompat">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#FFFFFF</item>
    </style>

	<style name="blackText" parent="@style/whiteText">
		<item name="android:textColor">#000000</item>
	</style>
	
	<style name="basicLayout">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>    
	</style>
		
	<style name="textLayout" parent="@style/basicLayout">
		<item name="android:textAppearance">@style/whiteText</item>
	</style>
	
	<style name="buttonLayout">
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">0dp</item>
        <item name="android:padding">2dp</item>
	</style>	
	
	<style name="rowLayout">
		<item name="android:layout_margin">5dp</item>
	</style>

	<style name="symbolLayout">
		<item name="android:layout_width">20dp</item>
		<item name="android:layout_height">20dp</item>
		<item name="android:layout_margin">2dp</item>
	</style>
</resources>
